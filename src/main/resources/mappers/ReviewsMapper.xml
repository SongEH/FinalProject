    <select id="selectList" resultType="reviews">
        select 
            r.* , o.orders_name, s.shop_id
        from 
            reviews r
        inner join
            orders o on o.orders_id = r.orders_id
        inner join 
            shop s on o.shop_id = s.shop_id 
    </select>

    
    <select id="getReviewIdFromOrderId" parameterType="int" resultType="Int">
        select reviews_id from reviews where orders_id = #{orders_id} 
    </select>

    <select id="selectOneByOrdersId" parameterType="int" resultType="order">
        select * from order where orders_id = #{orders_id}
    </select>

    <!-- insert reviews -->
    <insert id="insert" parameterType="reviews">
        insert into reviews (
                            reviews_rating,
                            reviews_content,
                            reviews_cdate,
                            orders_id
                    )values (
                            #{reviews_rating},
                            #{reviews_content},
                            sysdate(),
                            #{orders_id}
                            )
    </insert>

    <!-- insert reviews_images   -->
    <insert id="insert_img" parameterType="reviewsImages">
        insert into reviews_images(
                                    reviews_img,
                                    reviews_id
                                    )
                            values(
                                    #{reviews_img},
                                    #{reviews_id}
                                    )
    </insert>


</mapper>